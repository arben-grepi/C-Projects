<Window x:Class="SWOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">

    <StackPanel>
        <Ellipse Margin ="0,0,0,5" Height="100" Fill="Red" Stroke="Black" StrokeThickness="5" Width="100"/>
        <Ellipse Margin ="0,0,0,5" Height="100" Fill="Yellow" Stroke="Black" StrokeThickness="5" Width="100"/>
        <Ellipse Margin ="0,0,0,5" Height="100" Fill="Green" Stroke="Black" StrokeThickness="5" Width="100"/>
        <WrapPanel x:Name="myStack" Orientation="Horizontal" HorizontalAlignment="Center">
            <Rectangle Height="100" Fill="Red" Width="100" Margin="0,0,5,0" 
                       Stroke="Black" StrokeThickness="5"/>
            <Rectangle Height="100" Fill="Yellow" Width="100" 
                       Stroke="Black" StrokeThickness="5" Margin="0,0,5,0"/>
            <Rectangle Height="100" Fill="Green" Width="100" 
                       Stroke="Black" StrokeThickness="5" Margin="0,0,5,0"/>
        </WrapPanel>
    </StackPanel>




</Window>
